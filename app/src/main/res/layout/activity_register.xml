<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.campusconnection.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/registerEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/registerEmailButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.5"
            android:layout_below="@+id/registerEmailInput"
            android:layout_marginTop="76dp"
            android:text="@string/action_send_activation_email"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/registerSignUpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sign_up"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="95dp"
            android:layout_above="@+id/registerEmailButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/registerStep1OutOf2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/label_step_1_2"
            android:layout_below="@+id/registerEmailButton"
            android:layout_alignRight="@+id/registerSignUpLabel"
            android:layout_alignEnd="@+id/registerSignUpLabel"
            android:layout_marginTop="75dp" />

        <ProgressBar
            android:id="@+id/registerProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/registerEmailInput"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
