<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campusconnection.SignUpPhotosActivity">

    <TextView
        android:id="@+id/selectPhotos"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_add_photos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/addPhotosContainer"
        android:layout_below="@id/selectPhotos"
        android:padding="10dp" />

    <Button
        android:id="@+id/signupSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_sign_up"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addPhotosContainer"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
